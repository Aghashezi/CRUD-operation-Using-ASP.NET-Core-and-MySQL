@model CRUD_Using_MVC.Models.Category

@{
    ViewBag.Title = "Delete Category";
}

<div class="container mt-4">
    <h2 class="text-center">Delete Category</h2>

    <div class="alert alert-warning">
        <h4>Category</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CategoryName)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CategoryName)</dd>
        </dl>
    </div>

    <div class="mt-3">
        <h4>Are you sure you want to delete this?</h4>
        <form asp-action="Delete" method="post" class="mt-2">
            <input type="hidden" asp-for="CategoryID" />
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
