@model CRUD_Using_MVC.Models.Product

<div class="container mt-4">
    <h1 class="text-center">Delete Product</h1>
    <div class="alert alert-warning">
        <h4 class="alert-heading">Are you sure you want to delete this product?</h4>
        <div>
            <strong>@Model.ProductName</strong>
        </div>
        <form asp-action="Delete" class="mt-3">
            <input type="hidden" asp-for="ProductID" />
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
