@model CRUD_Using_MVC.Models.Product

<div class="container mt-4">
    <h1 class="text-center">Edit Product</h1>
    <form asp-action="Edit" method="post" class="mt-4 p-4 border rounded shadow-sm bg-light">
        <input type="hidden" asp-for="ProductID" />

        <div class="mb-3">
            <label asp-for="ProductName" class="form-label"></label>
            <input asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Quantity" class="form-label"></label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Tags" class="form-label"></label>
            <input asp-for="Tags" class="form-control" />
            <span asp-validation-for="Tags" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Categories:</label>
            @foreach (var category in ViewBag.Categories)
            {
                <div class="form-check">
                    <input type="checkbox" name="selectedCategories" value="@category.CategoryID"
                    @(Model.ProductCategories != null && Model.ProductCategories.Any(pc => pc.CategoryID == category.CategoryID) ? "checked" : "")
                           class="form-check-input" id="category_@category.CategoryID" />
                    <label class="form-check-label" for="category_@category.CategoryID">
                        @category.CategoryName
                    </label>
                </div>
            }
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
